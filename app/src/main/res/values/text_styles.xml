<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_page_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/guide_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_section_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/guide_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginVertical">24dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="text_section_title_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/guide_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_navigation_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- chipsActivity -->
    <style name="text_standalone_chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/guide_text</item>
    </style>

    <!-- menuActivity -->
    <style name="text_list_item">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/pink_strong</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>