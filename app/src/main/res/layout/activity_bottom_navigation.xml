<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back"
        app:title="@string/bottom_navigation_activity_title"
        app:titleCentered="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_badge"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- アイコンをラベルの左に配置する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_icon_left_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemIconGravity="start"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- 選択中アイコンのみラベルを表示する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_label_selected_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:labelVisibilityMode="selected"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- ラベルを常に表示する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_label_always_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- ラベルを常に非表示にする -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_label_never_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- ナビゲーションの背景カラーとインディケーターのリップルカラーを指定する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_background_ripple_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:backgroundTint="@color/pink_strong"
                app:itemRippleColor="@color/white"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- アイコンの色とサイズを指定する -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_icon_color_size_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemIconSize="48dp"
                app:itemIconTint="@color/pink_strong"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- ラベルの色を指定する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_label_color_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemTextColor="@color/pink_strong"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- ラベルのテキストスタイルを指定する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_label_text_style_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemTextAppearanceActive="@style/bottom_navigation_text"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- アクティブインディケーターの色を指定する -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_active_indicator_color_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemActiveIndicatorStyle="@style/BottomNavigationActiveIndicator"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- アクティブインディケーターを見えないようにする -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_active_indicator_invisible_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemActiveIndicatorStyle="@style/BottomNavigationActiveIndicatorTransparent"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- アクティブインディケーターのサイズ指定 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_active_indicator_size_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemActiveIndicatorStyle="@style/BottomNavigationActiveIndicatorSelectorExpand"
                app:menu="@menu/bottom_navigation_menu" />

            <!-- 選択時、アクティブインディケーターのサイズを変化させる -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_8"
                android:text="@string/bottom_navigation_active_indicator_size_change_comment"
                android:textColor="@color/guide_text"
                android:textSize="@dimen/space_16" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_16"
                app:itemActiveIndicatorStyle="@style/BottomNavigationActiveIndicatorSelectorExpand"
                app:itemIconGravity="start"
                app:menu="@menu/bottom_navigation_menu" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>